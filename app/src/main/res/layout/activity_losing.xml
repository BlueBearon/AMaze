<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starsactual"
    tools:context=".gui.LosingActivity">

    <TextView
        android:id="@+id/LosingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:fontFamily="serif"
        android:text="@string/houston_we_have_a_problem"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFEB3B"
        android:textSize="34sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/FailureCause"
        android:layout_width="372dp"
        android:layout_height="53dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="259dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/FailureCauseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/java_will_decide"
            android:textAlignment="center"
            android:textColor="#CDDC39"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/RecoveryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/attempting_recovery"
            android:textAlignment="center"
            android:textColor="#CDDC39"
            android:textSize="20sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LosingInfo"
        android:layout_width="359dp"
        android:layout_height="53dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="515dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/PathTextLosing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pathtext"
            android:textAlignment="center"
            android:textColor="#CDDC39"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/EnergyTextLosing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/energytext"
            android:textAlignment="center"
            android:textColor="#FFEB3B"
            android:textSize="20sp"
            android:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@+id/LoseToTitleButton"
        android:layout_width="193dp"
        android:layout_height="68dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="380dp"
        android:text="@string/return_to_title"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>