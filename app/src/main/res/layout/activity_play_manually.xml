<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starsactual"
    android:foregroundTint="#673AB7"
    tools:context=".gui.PlayAnimationActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="205dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/showfullMazeView"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:text="@string/full_maze_view"
            android:textColor="#FFEB3B"
            android:textSize="20sp"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/showSolution"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:text="@string/show_solution"
            android:textColor="#FFEB3B"
            android:textSize="20sp"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/ShowWalls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_walls"
            android:textColor="#FFEB3B"
            android:textSize="20sp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/Decrease_Scale1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="-"
                android:textColor="#A5D6A7"
                android:visibility="visible" />

            <TextView
                android:id="@+id/MapScaleText1"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/map_scale"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/Increase_Scale1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="+"
                android:textColor="#A5D6A7"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/Go2Win"
        android:layout_width="122dp"
        android:layout_height="84dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="628dp"
        android:text="@string/go2win"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Jump"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="608dp"
        android:text="@string/j"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Forward"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="560dp"
        android:text="@string/f"
        android:visibility="visible"
        app:iconTint="#EDE0E0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Around"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="656dp"
        android:text="@string/b"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Right"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="348dp"
        android:layout_marginTop="608dp"
        android:text="@string/r"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Left"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="608dp"
        android:text="@string/l"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <edu.wm.cs.cs301.amazebychasepacker.gui.MazePanel
        android:id="@+id/ManualPanel"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="216dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>